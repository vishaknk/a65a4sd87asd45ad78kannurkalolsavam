<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout">
    <TableRow
        android:id="@+id/rl_spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_layout">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rl_bible_spinner"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/spinner_bg">
            <Spinner
                android:id="@+id/sv_bible_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:background="@null"
                android:minHeight="0dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_dropdown"
                android:layout_alignBottom="@+id/sv_bible_books"
                android:layout_alignRight="@+id/sv_bible_books"
                android:paddingBottom="5dp"
                android:paddingRight = "5dp"/>
        </RelativeLayout>
    </TableRow>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_spinners"
        android:background="@color/bg_layout">
        <ListView
            android:id="@+id/lv_bible_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:clickable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:divider="@android:color/holo_orange_light"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/bg_layout"/>
    </RelativeLayout>
</RelativeLayout>