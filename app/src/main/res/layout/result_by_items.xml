<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_leading_dist">
    <TableRow
        android:id="@+id/rl_spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_layout">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rl_bible_spinner"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/spinner_bg">
            <Spinner
                android:id="@+id/sv_bible_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:background="@null"
                android:minHeight="0dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_dropdown"
                android:layout_alignBottom="@+id/sv_bible_books"
                android:layout_alignRight="@+id/sv_bible_books"
                android:paddingBottom="5dp"
                android:paddingRight = "5dp"/>
        </RelativeLayout>
    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_drawable">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First : "
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_firstcollege"
                android:lineSpacingExtra="2dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hsgeneral"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_firststudents"
                android:lineSpacingExtra="2dp"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/ch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_drawable">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second : "
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/tv_secondcollege"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/hsgeneral"
                android:id="@+id/tv_secondStudents"
                android:lineSpacingExtra="2dp"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/muffsic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_drawable">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Third : "
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_thirdcollege"
                android:lineSpacingExtra="2dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hsgeneral"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_thirdStudent"
                android:lineSpacingExtra="2dp"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>