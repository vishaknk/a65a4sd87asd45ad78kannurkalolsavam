<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_toKannur"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/bg_leading_dist"
        android:text="To Kannur"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/lightor"
        android:padding="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_toclt"
        android:layout_marginTop="0dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="To Kozhikode"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/bg_leading_dist"
        android:padding="5dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_train"
                android:visibility="visible"
                android:layout_gravity="center" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>