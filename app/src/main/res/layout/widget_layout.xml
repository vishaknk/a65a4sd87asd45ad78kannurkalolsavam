<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e91e63"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvmain1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="LEADING DISTRICTS"
            android:textColor="#000"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_refresh" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linmain0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF7F7"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linmain8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leaddist1"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:drawablePadding="1dp"
                android:gravity="left|center"
                android:text="@string/no_result"
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/leadscore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:drawablePadding="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linmain9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#FAF7F7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leaddist2"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:drawablePadding="1dp"
                android:gravity="left|center"
                android:text="@string/no_result"
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/leadscore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:drawablePadding="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linmain10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leaddist3"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:drawablePadding="1dp"
                android:gravity="left|center"
                android:text="@string/no_result"
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/leadscore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:drawablePadding="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>